

<div class='container'>


<div class="imggg"></div>

<p><h1>Burgers</h1></p>

  <div class="row">


    <div class="col-6">
          <p>burger available</p>
            <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>






    <div class="col-6">
      <p>burger eaten</p>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>


<div class = "container">
  <p>add your favorate burger</p>
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>


<h1>Burgers</h1>


<div class='container'>

  <div class="row">
    <p>burger available</p>
    <div class="col-8">
            <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>


  </div>

<p>burger eaten</p>
    <div class="row"></div>
      <div class="col-4">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class = "container">
  <p>add your favorate burger</p>
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>

